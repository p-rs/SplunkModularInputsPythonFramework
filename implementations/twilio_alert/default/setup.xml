<setup>
    <block title="Twilio SMS Alerts">
        <text>Configure Twilio SMS Alerting</text>
    </block>

    <block title="Activation Key" endpoint="admin/alert_actions" entity="twilio">
        <text>Visit &lt;a href="http://www.baboonbones.com/#activation" target="_blank"&gt;http://www.baboonbones.com/#activation&lt;/a&gt; to obtain a free,non-expiring key</text>
        
        <input field="param.activationkey">
            <label>Activation Key</label>
            <type>text</type> 
        </input>  

                
    </block>
    
    <block title="Global Authentication Settings" endpoint="admin/alert_actions" entity="twilio">
        <input field="param.authtoken">
            <label>Auth Token</label>
            <type>text</type>
        </input>
        <input field="param.accountsid">
            <label>Account SID</label>
            <type>text</type>
        </input>
        
    </block>

</setup>